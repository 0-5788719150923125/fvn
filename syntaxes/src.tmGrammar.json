{
    "scopeName": "source.src",
    "patterns": [{ "include": "#expression" }],
    "repository": {
        "expression": {
            "patterns": [
                { "include": "#input" },
                { "include": "#output" },
                { "include": "#variable" }
            ]
        },
        "input": {
            "match": "< ONE@STATE:",
            "name": "invalid.input"
        },
        "output": {
            "match": "> ONE@STATE:",
            "name": "keyword.output"
        },
        "variable": {
            "begin": "\\(\\(",
            "end": "\\)\\)",
            "beginCaptures": {
                "0": { "name": "punctuation.paren.open" }
            },
            "endCaptures": {
                "0": { "name": "punctuation.paren.close" }
            },
            "name": "support.class.variable",
            "patterns": [{ "include": "#expression" }]
        }
    }
}
